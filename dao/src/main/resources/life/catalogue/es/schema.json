{
  "settings": {
    "index": {
      "refresh_interval": -1,
      "max_result_window": 2000000
    },
    "analysis": {
      "filter": {
        "ngram_trunc": {
          "type": "truncate",
          "length": 12
        }
      },
      "char_filter": {
        "sciname_char_filter": {
          "type": "mapping",
          "mappings": [
            "\\u0020( => \\u0020",
            "( => ",
            ")\\u0020 => \\u0020",
            ") => ",
            "- => ",
            ". => ",
            "' => ",
            ", => \\u0020",
            "Ã— => \\u0020"
          ]
        }
      },
      "tokenizer": {
        "autocomplete_indextime": {
          "type": "edge_ngram",
          "min_gram": 2,
          "max_gram": 12,
          "token_chars": ["letter", "digit"]
        },
        "sciname_autocomplete_indextime": {
          "type": "edge_ngram",
          "min_gram": 2,
          "max_gram": 12,
          "token_chars": ["letter", "digit", "punctuation", "symbol"]
        }
      },
      "analyzer": {
        "ignore_case": {
          "tokenizer": "keyword",
          "filter": ["lowercase", "asciifolding"]
        },
        "autocomplete_indextime": {
          "tokenizer": "autocomplete_indextime",
          "filter": ["lowercase", "asciifolding"]
        },
        "autocomplete_querytime": {
          "tokenizer": "lowercase",
          "filter": ["ngram_trunc", "asciifolding"]
        },
        "sciname_ignore_case": {
          "char_filter": "sciname_char_filter",
          "tokenizer": "keyword",
          "filter": ["lowercase", "asciifolding"]
        },
        "sciname_whole_words": {
          "char_filter": "sciname_char_filter",
          "tokenizer": "whitespace",
          "filter": ["lowercase", "asciifolding"]
        },
        "standard_ascii": {
          "tokenizer": "standard",
          "filter": ["lowercase", "asciifolding"]
        },
        "sciname_autocomplete_indextime": {
          "char_filter": "sciname_char_filter",
          "tokenizer": "sciname_autocomplete_indextime",
          "filter": ["lowercase", "asciifolding"]
        },
        "sciname_autocomplete_querytime": {
          "char_filter": "sciname_char_filter",
          "tokenizer": "whitespace",
          "filter": ["ngram_trunc", "lowercase", "asciifolding"]
        }
      }
    }
  },
  "mappings": {
    "dynamic": "strict",
    "properties": {
      "usageId": {
        "type": "keyword"
      },
      "datasetKey": {
        "type": "keyword"
      },
      "sectorKey": {
        "type": "keyword"
      },
      "sectorDatasetKey": {
        "type": "keyword"
      },
      "sectorPublisherKey": {
        "type": "keyword"
      },
      "sectorMode": {
        "type": "keyword"
      },
      "secondarySourceGroup": {
        "type": "keyword"
      },
      "secondarySourceKey": {
        "type": "keyword",
        "fields": {}
      },
      "scientificName": {
        "type": "keyword",
        "fields": {
          "sic": {
            "type": "text",
            "analyzer": "sciname_ignore_case"
          },
          "sww": {
            "type": "text",
            "analyzer": "sciname_whole_words"
          },
          "sac": {
            "type": "text",
            "analyzer": "sciname_autocomplete_indextime",
            "search_analyzer": "sciname_whole_words"
          }
        }
      },
      "nameStrings": {
        "type": "object",
        "properties": {
          "sciNameLetter": {
            "type": "keyword"
          },
          "genusLetter": {
            "type": "keyword"
          },
          "genusOrMonomial": {
            "type": "keyword",
