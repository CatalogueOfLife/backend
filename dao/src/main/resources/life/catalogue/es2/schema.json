{
  "settings": {
    "index": {
      "max_result_window": 2000000
    },
    "analysis": {
      "filter": {
        "ngram_trunc": {
          "type": "truncate",
          "length": 12
        }
      },
      "char_filter": {
        "sciname_char_filter": {
          "type": "mapping",
          "mappings": [
            "\\u0020( => \\u0020",
            "( => ",
            ")\\u0020 => \\u0020",
            ") => ",
            "- => ",
            ". => ",
            "' => ",
            ", => \\u0020",
            "Ã— => \\u0020"
          ]
        }
      },
      "tokenizer": {
        "autocomplete_indextime": {
          "type": "edge_ngram",
          "min_gram": 2,
          "max_gram": 12,
          "token_chars": ["letter", "digit"]
        },
        "sciname_autocomplete_indextime": {
          "type": "edge_ngram",
          "min_gram": 2,
          "max_gram": 12,
          "token_chars": ["letter", "digit", "punctuation", "symbol"]
        }
      },
      "analyzer": {
        "ignore_case": {
          "tokenizer": "keyword",
          "filter": ["lowercase", "asciifolding"]
        },
        "standard_ascii": {
          "tokenizer": "standard",
          "filter": ["lowercase", "asciifolding"]
        },
        "suggest_indextime": {
          "tokenizer": "autocomplete_indextime",
          "filter": ["lowercase", "asciifolding"]
        },
        "suggest_querytime": {
          "tokenizer": "lowercase",
          "filter": ["ngram_trunc", "asciifolding"]
        }
      }
    }
  },
  "mappings": {
    "dynamic": false,
    "properties": {
      "id": {
        "type": "keyword"
      },
      "sectorKey": {
        "type": "keyword"
      },
      "sectorMode": {
        "type": "keyword"
      },
      "sectorDatasetKey": {
        "type": "keyword"
      },
      "sectorPublisherKey": {
        "type": "keyword"
      },
      "secondarySourceGroups": {
        "type": "keyword"
      },
      "secondarySourceKeys": {
        "type": "keyword"
      },
      "group": {
        "type": "keyword"
      },
      "issues": {
        "type": "keyword"
      },
      "classification": {
        "type": "object",
        "dynamic": false,
        "properties": {
          "id": {
            "type": "keyword"
          }
        }
      },
      "usage": {
        "type": "object",
        "dynamic": false,
        "properties": {
          "sectorKey": {
            "type": "keyword",
            "copy_to": "sectorKey"
          },
          "sectorMode": {
            "type": "keyword",
            "copy_to": "sectorMode"
          },
          "status": {
            "type": "keyword"
          },
          "origin": {
            "type": "keyword"
          },
          "extinct": {
            "type": "boolean"
          },
          "environments": {
            "type": "keyword"
          },
          "label": {
            "type": "keyword"
          },
          "name": {
            "type": "object",
            "dynamic": false,
            "properties": {
              "id": {
                "type": "keyword"
              },
              "datasetKey": {
                "type": "keyword"
              },
              "sectorKey": {
                "type": "keyword",
                "copy_to": "sectorKey"
              },
              "sectorMode": {
                "type": "keyword",
                "copy_to": "sectorMode"
              },
              "scientificName": {
                "type": "keyword",
                "fields": {
                  "word": {
                    "type": "text",
                    "analyzer": "standard_ascii"
                  },
                  "prefix": {
                    "type": "search_as_you_type"
                  }
                }
              },
              "scientificNameNormalized": {
                "type": "text",
                "analyzer": "standard_ascii"
              },
              "authorship": {
                "type": "keyword",
                "fields": {
                  "std": {
                    "type": "text",
                    "analyzer": "standard_ascii"
                  }
                }
              },
              "author": {
                "type": "keyword"
              },
              "combinationAuthorship": {
                "type": "object",
                "dynamic": false,
                "properties": {
                  "year": {
                    "type": "keyword"
                  },
                  "authors": {
                    "type": "keyword",
                    "copy_to": "author"
                  },
                  "exAuthors": {
                    "type": "keyword",
                    "copy_to": "author"
                  }
                }
              },
              "basionymAuthorship": {
                "type": "object",
                "dynamic": false,
                "properties": {
                  "authors": {
                    "type": "keyword",
                    "copy_to": "author"
                  },
                  "exAuthors": {
                    "type": "keyword",
                    "copy_to": "author"
                  }
                }
              },
              "rank": {
                "type": "integer"
              },
              "code": {
                "type": "keyword"
              },
              "nomStatus": {
                "type": "keyword"
              },
              "publishedInId": {
                "type": "keyword"
              },
              "type": {
                "type": "keyword"
              }
            }
          }
        }
      },
      "decisions": {
        "type": "nested",
        "dynamic": false,
        "properties": {
          "datasetKey": {
            "type": "keyword"
          },
          "mode": {
            "type": "keyword"
          }
        }
      },
      "vernacularNames": {
        "type": "object",
        "dynamic": false,
        "properties": {
          "name": {
            "type": "text",
            "analyzer": "standard_ascii"
          }
        }
      }
    }
  }
}
